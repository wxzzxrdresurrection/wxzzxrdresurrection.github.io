---
import Layout from '../layouts/Layout.astro';
import ProfileInfo from "../components/ProfileInfo.astro";
import ProfileActionButton from "../components/ProfileActionButton.astro";
import TabsButtons from "../components/TabsButtons.tsx";
import ProjectsCC from '@/components/ProjectsCC.astro';
import AboutMeCC from "../components/AboutMeCC.astro";
import ProfileFacts from "../components/ProfileFacts.astro";
---

<Layout title="Luis Zapata | Portfolio" description="A simple portfolio created with Astro." scrollSmooth={false}>
    <>
        <ProfileInfo/>
        <ProfileFacts/>
        <ProfileActionButton/>
        <TabsButtons client:idle>
          <AboutMeCC slot="about"/>
          <ProjectsCC slot="portfolio"/>
        </TabsButtons>
    </>
</Layout>
